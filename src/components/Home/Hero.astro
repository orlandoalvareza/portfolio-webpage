---
import { hero } from "../../Content/hero";
---

<div class="hero-container">
  <div class="content-container">
    <div class="content">
      <h1>{hero.en.h1Element}</h1>
      <h3>{hero.en.h3Element}</h3>
      <a href="#contact" id="hero-link">{hero.en.aElement}</a>
    </div>
  </div>
  <div class="backdrop"></div>
</div>

<style>
  .hero-container {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--second-color);
    width: 100%;
    height: 100vh;
  }

  .content-container {
    text-align: center;
    padding: 5px;
  }

  .content {
    position: absolute;
    top: 50%;
    left: 40%;
    background: var(--second-color);
    transform: translate(-50%, -50%);
    padding: 25px;
    border-radius: 0 60px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    z-index: 5;
  }

  .content h1 {
    font-size: 2.4rem;
    color: var(--fourth-color);
    margin-bottom: 10px;
  }

  .content h3 {
    font-size: 1.2rem;
    margin-bottom: 22px;
  }

  .content a {
    color: var(--second-color);
    background: var(--fourth-color);
    padding: 6px 15px;
    border-radius: 15px;
  }

  .content a:hover {
    color: var(--first-color);
    background: var(--third-color);
  }

  .backdrop {
    background: var(--fourth-color);
    height: 100vh;
    width: 55%;
    clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 5% 100%);
    border-radius: 0 0 0 100%;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
  }

  :global(.dark) .hero-container {
    background: var(--fourth-color-dark);
  }

  :global(.dark) .content {
    background: var(--second-color-dark);
  }

  :global(.dark) .content h1 {
    color: var(--first-color-dark);
  }

  :global(.dark) .content h3 {
    color: var(--fifth-color-dark);
  }

  @media screen and (max-width: 480px) {
    .content {
      left: 45%;
      width: 80%;
      padding: 15px 20px 20px;
    }

    .content h1 {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }

    .content h3 {
      display: none;
    }

    .content a {
      font-size: 13px;
    }

    .backdrop {
      width: 60%;
      clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 15% 50%);
      border-radius: 0;
    }
  }

  @media screen and (min-width: 481px) and (max-width: 767px) {
    .content {
      width: 68%;
      padding: 15px 20px 20px;
    }

    .content h1 {
      font-size: 1.4rem;
      margin-bottom: 20px;
    }

    .content h3 {
      display: none;
    }

    .content a {
      font-size: 13px;
    }

    .backdrop {
      width: 65%;
    }
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .content {
      width: 420px;
    }

    .content h1 {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .content h3 {
      display: none;
    }
  }

  @media screen and (min-width: 1024px) and (max-width: 1279px) {
    .content h1 {
      font-size: 2.1rem;
    }

    .content h3 {
      font-size: 1.1rem;
    }
  }
</style>

<script>
  import "../../scripts/hero.ts";
</script>
