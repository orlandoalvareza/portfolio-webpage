---
import "../styles/hero.css";
---

<div class="hero-container">
  <div class="content-container">
    <div class="hero-content">
      <h1>Crafting Experiences, Coding Dreams</h1>
      <h3>Where Imagination Fuels Innovation</h3>
      <a href="#contact">Let's Connect</a>
    </div>
  </div>
  <div class="backdrop-container"></div>
</div>

<style>
  .hero-container {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100vh;
  }

  .content-container {
    text-align: center;
    padding: 5px;
  }

  .hero-content {
    position: absolute;
    top: 50%;
    left: 40%;
    height: 175px;
    transform: translate(-50%, -50%);
    padding: 25px;
    border-radius: 0 60px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    z-index: 5;
  }

  .hero-content h1 {
    font-size: 2.4rem;
    margin-bottom: 10px;
  }

  .hero-content h3 {
    font-size: 1.2rem;
    margin-bottom: 22px;
  }

  .hero-content a {
    padding: 6px 15px;
    border-radius: 15px;
  }

  .backdrop-container {
    height: 100vh;
    width: 55%;
    clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 5% 100%);
    border-radius: 0 0 0 100%;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
  }
</style>
