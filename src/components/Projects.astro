---
import { projects } from "../Content/projects";
import type { PROJECT } from "../Types/types-interfaces";
---

<div class="projects-container">
  <h1 id="project-header">Projects</h1>
  <ul class="projects-list">
    {
      projects.map((project: PROJECT) => (
        <li class="project">
          <img src={project.image} alt={project.title} />
          <div class="project-information">
            <h2>{project.title}</h2>
            <p class="project-description">{project.description.en}</p>
            <ul class="skills-list">
              {project.skills.map((skill) => (
                <li>#{skill}</li>
              ))}
            </ul>
            <div class="project-options">
              <a href={project.githubLink} target="_blank">
                <i class="fa-brands fa-github" />
              </a>
              <a href={project.netlifyLink} target="_blank">
                <i class="fa-solid fa-arrow-up-right-from-square" />
              </a>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  <div class="projects-link">
    <a
      id="project-link"
      href="https://github.com/orlandoalvareza?tab=repositories"
      target="_blank"
    >
      View full projects archive in GitHub
    </a>
    <i class="fa-solid fa-arrow-right"></i>
  </div>
</div>

<style>
  .projects-container {
    width: 1000px;
  }

  .projects-container h1 {
    margin-bottom: 15px;
    text-align: center;
  }

  .project {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 55px;
  }

  .project:nth-child(2n + 1) {
    text-align: right;
  }

  .project:nth-child(2n) {
    flex-direction: row-reverse;
  }

  .project img {
    width: 570px;
    height: 320px;
    object-fit: fill;
    border-radius: 3px;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
  }

  .project::after {
    position: absolute;
    content: "";
    background: rgba(55, 107, 126, 0.2);
    width: 570px;
    height: 100%;
    z-index: 1;
  }

  .project-information {
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .project:nth-child(2n + 1) .project-information {
    align-items: flex-end;
    left: 510px;
  }

  .project:nth-child(2n) .project-information {
    right: 510px;
  }

  .project-information h2,
  .skills-list,
  .project-options {
    width: 85%;
  }

  .project-information p {
    line-height: 20px;
    color: var(--second-color);
    background: var(--fourth-color);
    padding: 16px 20px;
    text-align: center;
    border-radius: 8px;
    margin: 8px 0;
    box-shadow:
      rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
      rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
    z-index: 5;
  }

  .skills-list,
  .project-options {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
  }

  .project:nth-child(2n) .skills-list,
  .project:nth-child(2n) .project-options {
    justify-content: flex-start;
  }

  .project-options {
    font-size: 20px;
    padding: 2px 5px;
  }

  .project-options a {
    color: var(--fifth-color);
  }

  .project-options a:hover {
    color: var(--fourth-color);
  }

  .projects-link {
    text-align: center;
    margin-top: 10px;
  }

  .projects-link a,
  .projects-link i {
    color: var(--fifth-color);
  }

  .projects-link a:hover {
    color: var(--fourth-color);
  }

  .projects-link i {
    margin-left: 6px;
  }

  :global(.dark) .projects-container h1,
  :global(.dark) .project-options a:hover,
  :global(.dark) .projects-link a:hover {
    color: var(--first-color-dark);
  }

  :global(.dark) .project-information h2,
  :global(.dark) .skills-list li,
  :global(.dark) .project-options a,
  :global(.dark) .projects-link a,
  :global(.dark) .projects-link i {
    color: var(--fifth-color-dark);
  }

  :global(.dark) .project::after {
    background: rgba(105, 109, 117, 0.3);
  }

  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .projects-container {
      width: 730px;
    }

    .projects-container h1 {
      font-size: 1.8rem;
    }

    .project {
      margin-bottom: 65px;
    }

    .project img {
      width: 420px;
      height: 260px;
    }

    .project::after {
      width: 420px;
    }

    .project-information {
      gap: 5px;
    }

    .project-information h2 {
      font-size: 1.3rem;
    }

    .project:nth-child(2n + 1) .project-information {
      left: 360px;
    }

    .project:nth-child(2n) .project-information {
      right: 360px;
    }

    .project-information p {
      line-height: 19px;
      padding: 12px;
    }

    .skills-list li {
      display: none;
    }

    .project-options {
      font-size: 18px;
    }
  }

  @media screen and (min-width: 1024px) and (max-width: 1279px) {
    .projects-container {
      width: 960px;
    }
  }
</style>

<script>
  import "../scripts/projects";
</script>
