---
import projects from "../Content/projects";
import type { PROJECT } from "../Types/types-interfaces";
import "../styles/projects.css";
---

<div class="projects-container">
  <h1>Projects</h1>
  <ul class="projects-list">
    {
      projects.map((project: PROJECT) => (
        <li class="project">
          <img src={project.image} alt={project.title} />
          <div class="project-information">
            <h2>{project.title}</h2>
            <p>{project.description}</p>
            <ul class="skills-list">
              {project.skills.map((skill) => (
                <li>#{skill}</li>
              ))}
            </ul>
            <div class="project-options">
              <a href={project.githubLink} target="_blank">
                <i class="fa-brands fa-github" />
              </a>
              <a href={project.netlifyLink} target="_blank">
                <i class="fa-solid fa-arrow-up-right-from-square" />
              </a>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  <a href="https://github.com/orlandoalvareza?tab=repositories" target="_blank">
    View full projects archive in GitHub <i class="fa-solid fa-arrow-right"></i>
  </a>
</div>

<style>
  .projects-container {
    width: 1000px;
  }

  .projects-container h1 {
    margin-bottom: 15px;
    text-align: center;
  }

  .project {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 55px;
  }

  .project:nth-child(2n + 1) {
    text-align: right;
  }

  .project:nth-child(2n) {
    flex-direction: row-reverse;
  }

  .project img {
    width: 570px;
    height: 320px;
    object-fit: fill;
    border-radius: 3px;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
  }

  .project::after {
    position: absolute;
    content: "";
    width: 570px;
    height: 100%;
    z-index: 1;
  }

  .project-information {
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .project:nth-child(2n + 1) .project-information {
    align-items: flex-end;
    left: 510px;
  }

  .project:nth-child(2n) .project-information {
    right: 510px;
  }

  .project-information h2,
  .skills-list,
  .project-options {
    width: 85%;
  }

  .project-information p {
    line-height: 20px;
    padding: 16px 20px;
    text-align: center;
    border-radius: 8px;
    margin: 8px 0;
    box-shadow:
      rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
      rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
    z-index: 5;
  }

  .skills-list,
  .project-options {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
  }

  .project:nth-child(2n) .skills-list,
  .project:nth-child(2n) .project-options {
    justify-content: flex-start;
  }

  .project-options {
    font-size: 20px;
    padding: 2px 5px;
  }

  .projects-container > a {
    display: block;
    padding: 5px 0;
    text-align: center;
  }
</style>
