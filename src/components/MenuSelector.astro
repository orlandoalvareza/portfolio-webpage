---
import LanguageButton from "./LanguageButton.astro";
import ThemeButton from "./ThemeButton.astro";
---

<button id="menu-selector">
  <i class="fa-solid fa-bars"></i>
</button>
<div class="backdrop"></div>
<div id="menu-options" style="display: flex">
  <div class="navigation-options">
    <div class="close-icon-container">
      <button class="close-icon__button">
        <i class="fa-solid fa-x"></i>
      </button>
    </div>
    <ul class="navigation-list">
      <li>
        <a href="/">
          <i class="fa-solid fa-house"></i>
          <span>Home</span>
        </a>
      </li>
      <li>
        <a href="/about">
          <i class="fa-solid fa-address-book"></i>
          <span>About Me</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="page-preferences">
    <LanguageButton />
    <ThemeButton />
  </div>
</div>

<style>
  #menu-selector {
    background: transparent;
    padding: 5px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
  }

  #menu-selector i {
    font-size: 20px;
  }

  .backdrop {
    position: absolute;
    top: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.4);
    width: 100%;
    height: 100vh;
  }

  #menu-options {
    position: absolute;
    top: 0;
    right: 0;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background-color: var(--first-color);
    width: 14%;
    height: 100vh;
    padding: 20px;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
  }

  .navigation-options {
    width: 100%;
  }

  .close-icon-container {
    padding-bottom: 20px;
    border-bottom: 1px solid black;
  }

  .close-icon__button {
    background: transparent;
    padding: 5px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
  }

  .close-icon__button i {
    font-size: 18px;
  }

  .navigation-list {
    padding: 35px 15px;
  }

  .navigation-list li:first-child {
    margin-bottom: 15px;
  }

  .navigation-list a {
    display: flex;
    align-items: center;
    gap: 15px;
    color: var(--fourth-color);
  }

  .navigation-list i {
    font-size: 22px;
  }

  .navigation-list span {
    font-size: 18px;
  }

  .page-preferences {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }
</style>

<script is:inline>
  // const menuButton = document.getElementById("menu-selector");
  // const menuOptions = document.getElementById("menu-options");

  const openNavigationMenu = () => {
    menuOptions.style.display =
      menuOptions.style.display === "none" ? "flex" : "none";
  };

  const closeNavigationMenu = (event) => {
    if (
      !menuButton.contains(event.target) &&
      !menuOptions.contains(event.target)
    ) {
      menuOptions.style.display = "none";
    }
  };

  menuButton.addEventListener("click", openNavigationMenu);
  document.addEventListener("click", closeNavigationMenu);
</script>
